<div class="container">
  <div class="row">
    <%= render 'users/info' %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image.jpg', size: "100x100" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user), class: "btn btn-outline-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>