<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mb-4 border-bottom pb-2">User info</h2>
      <%= image_tag 'no_image.jpg', size: "100Ã—100", class: "mb-3 d-block mx-auto" %>

      <table class="table table-borderless">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <% if @user == current_user %>
       <div class="text-center">
        <%= link_to "Edit",edit_user_path(@user), class: "btn btn-outline-secondary w-100" %>
       </div>
      <% end %>

    <h2 class="mt-3"New book</h2>
      <%= form_with model: @book, url:books_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit "Create Book" , class: "btn btn-success w-100" %>
      <% end %>
    </div> 

    <div class="col-md-8 offset-md-1">
      <h2 class="mb-4 border-bottom pb-2">Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, books_path(book), class:"text=decoration-none" %></td>
              <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>