<h2>ユーザー情報編集</h>

<%= form_with model: @user,local: true do |f| %>
   <div>
     <%= f.label :name, "名前" %><br>
     <%= f.text_field :name %>
   </div>

   <div>
     <%= f.label :email, "メールアドレス" %><br>
     <%= f.email_field :email %></div>

   <div>
     <%= f.submit "更新する" %></div>

   </div>
 <% end %>