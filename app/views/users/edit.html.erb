<h2>User info</h2>
<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user, local: true do |f| %>
   <div class="field">
     <%= f.label :name, "Name" %><br>
     <%= f.text_field :name, class: "form-control" %>
   </div>

   <div class="field mt-3">
     <%= f.label :profile_image, accept: "Image/*" %><br>
     <%= f.file_field :profile_image, class: "form-control" %>
   </div>

   <div class="field mt-3">
     <%= f.label :introduction, "Introduction" %><br>
     <%= f.text_area :introduction, class: "form-control" %>
   </div>

   <div class="actions mt-3">
     <%= f.submit "Update User", class: "btn btn-secondary" %>
   </div>
<% end %>