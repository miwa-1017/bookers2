<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "ðŸ“šBookers", root_path, class: "navbar-brand" %>

        <div class="collapse navbar-collapse justify-content-end">
          <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item mx-2">
                <%= link_to root_path, class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i> Home
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to homes_about_path, class: "nav-link text-light" do %>
                  <i class="fas fa-users"></i> Users
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to books_path, class: "nav-link text-light" do %>
                  <i class="fas fa-book"></i> Books
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                  <i class="fas fa-sign-out-alt"></i> Log out
                <% end %>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav">
              <li class="nav-item mx-2">
                <%= link_to homes_top_path, class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i> Home
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to homes_about_path, class: "nav-link text-light" do %>
                  <i class="fas fa-link"></i> About
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fas fa-user-plus"></i> Sign up
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  <i class="fas fa-sign-in-alt"></i> Log in
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </header>
    <% if notice %>
      <div class="alert alert-success text-start ms-3 me-3"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger text-start ms-3 me-3"><%= alert %></div>
    <% end %>
    
    <main class="container mt-4">
      <%= yield %>
    </main>

    <footer class="text-center mt-4">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
