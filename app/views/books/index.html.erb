<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/form', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <% if book.user.profile_image.attached? %>                 
                  <%= image_tag book.user.profile_image, size: "60x60" %>
                <% else %>
                  <%= image_tag 'no_image.jpg', size: "60x60" %>
                <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book), class: "text-decoration-none text-primary" %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
