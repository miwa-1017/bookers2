
   <div class="container mt-5 ms-5">
     <div class="row justify-content-start">
       <div class="col-md-8 px-5 small" style="max-width: 350px;">
         <h2 class="mb-4 text-left">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mt-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="mt-4 text-left">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3 text-left">
    <%= link_to "Sign up", new_user_registration_path, class: "text-success" %><br>
    <%= link_to "Forgot your password?", new_user_password_path, class: "text-muted" %>
